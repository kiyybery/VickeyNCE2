<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        style="@style/bgimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/course_list_bg2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="5" >

        <cn.ttsk.view.LyricViewOrialmyself
            android:id="@+id/btn_text_oral_finish_LyricShow"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="3"
            android:background="#00000000"
            android:gravity="center_vertical" >
        </cn.ttsk.view.LyricViewOrialmyself>

        <ImageView
            android:id="@+id/iv_text_oral_finish_play"
            android:layout_width="202px"
            android:layout_height="0px"
            android:layout_margin="50px"
            android:layout_weight="2"
            android:src="@drawable/oral_score_play" />

        <ImageView
            android:id="@+id/iv_text_oral_finish_stop"
            android:layout_width="202px"
            android:layout_height="0px"
            android:layout_margin="50px"
            android:layout_weight="2"
            android:src="@drawable/oral_score_pause"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>