<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/bgimg" >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:layout_marginBottom="10px"
            android:gravity="center_horizontal"
            android:text="真不错！你完成了练习"
            android:textColor="#333333"
            android:textSize="48px"/>
        <TextView 
            android:id="@+id/tv_wordsresult_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60px"
            android:gravity="center_horizontal"
            android:text="已经掌握了 8个单词"
            android:textColor="#333333"
            android:textSize="48px"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100px"
            android:gravity="center_horizontal"
            android:text="马上参加挑战跟其他小伙伴比一比吧！"
            android:textColor="#333333"
            android:textSize="28px"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/btn_words_result_redo"
                android:layout_width="wrap_content"
                android:layout_height="90px"
                android:layout_weight="1"
	            android:layout_margin="15px"
	            android:text="重新练习"
	            android:textColor="#ffffff"
	            android:textSize="36px"
	            android:background="@drawable/btn_cyan"/>
            <Button 
                android:id="@+id/btn_words_result_challenge"
                android:layout_width="wrap_content"
                android:layout_height="90px"
                android:layout_weight="1"
	            android:layout_margin="15px"
	            android:text="再次挑战"
	            android:textColor="#ffffff"
	            android:textSize="36px"
	            android:background="@drawable/btn_cyan"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
