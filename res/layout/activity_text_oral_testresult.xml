<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/course_list_bg2"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="666px"
            android:layout_height="781px"
            android:layout_margin="28px"
            android:background="@drawable/oral_score_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="78px"
                android:text="你的成绩"
                android:textColor="#835137"
                android:textSize="36px" />

            <TextView
                android:id="@+id/tv_text_oral_testresult_grade"
                android:layout_width="wrap_content"
                android:layout_height="180px"
                android:layout_marginTop="20px"
                android:text="100"
                android:textColor="#ff6661"
                android:textSize="160px" />

            <ImageView
                android:layout_width="252px"
                android:layout_height="45px"
                android:src="@drawable/oral_score_line" />

            <TextView
                android:id="@+id/tv_ext_oral_testresult_Ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="打败了89%的用户"
                android:textColor="#333333"
                android:textSize="36px" />

            <ImageView
                android:id="@+id/iv_text_oral_testresult_play"
                android:layout_width="202px"
                android:layout_height="202px"
                android:layout_marginTop="60px"
                android:src="@drawable/oral_score_play" />
        </LinearLayout>

        <Button
            android:id="@+id/but_text_oral_testresult_share"
            android:layout_width="280px"
            android:layout_height="120px"
            android:background="@drawable/oral_score_btn"
            android:text="分享"
            android:textColor="#ffffff"
            android:textSize="36px" />
    </LinearLayout>

</RelativeLayout>