<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110px"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_section_footer_course"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_menu"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_section_footer_course"
            android:layout_width="65px"
            android:layout_height="50px"
            android:background="@drawable/menu_course" />

        <TextView
            android:id="@+id/tv_section_footer_courselist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课堂"
            android:textSize="26px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_section_footer_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_menu_current"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_section_footer_activity"
            android:layout_width="65px"
            android:layout_height="50px"
            android:background="@drawable/menu_activity_select" />

        <TextView
            android:id="@+id/tv_section_footer_activitylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动"
            android:textSize="26px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_section_footer_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_menu"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_section_footer_message"
            android:layout_width="65px"
            android:layout_height="50px"
            android:background="@drawable/menu_message" />

        <TextView
            android:id="@+id/tv_section_footer_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textSize="26px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_section_footer_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_menu"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_section_footer_setting"
            android:layout_width="65px"
            android:layout_height="50px"
            android:background="@drawable/menu_setting" />

        <TextView
            android:id="@+id/tv_section_footer_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="26px" />
    </LinearLayout>

</LinearLayout>